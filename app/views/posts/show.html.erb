
<br>
<div class="container-float">
    <h1 class="font-weight-bold"><%= @post.title %></h1>
    <p class="text-justify"><%= @post.body%></p>
    <div>
        <small>Posted <%= time_ago_in_words(@post.created_at)%> ago.</small> 
    </div>
<br>
    <div> 
        <%= link_to(
        "Edit",
        edit_post_path(@post),
        class: 'btn btn-outline-primary'
        )
        %>
        <%= link_to(
        "Delete",
        post_path(@post),
        method: :delete,
        class: 'btn btn-outline-primary',
        data: { confirm: 'Are you sure you want to delete this post?' }
        )
        %>
    </div>
<br>
    <div class=" rounded">
        <%= simple_form_for [@post, @comment] do |f| %>
       <h5> <%= f.input :body, label: "Comment", class: "format-group", placeholder: "What's on your mind?" %> </h5>
        <%= f.submit "Submit", class: "btn btn-outline-primary"%>
        <% end %>
    </div>
<br>
    <div class="container-float ">
        <% @comments.each do |comment| %>
            <div >
               <div class="font-weight-bold"><%=comment.user.name%> </div>
             <%= comment.body %> <br>
                <div class=" d-flex  align-items-center w-100">
                    <small >
                    Commented <%= time_ago_in_words(comment.created_at) %> ago â€¢
                    </small>
                    <small >
                    <%= link_to(
                        "Delete",
                        post_comment_path(@post, comment),
                        method: :delete, 
                        data: {
                        confirm: "Are you sure?"
                        },
                        class: 'btn btn-link text-primary ',
                    ) %>
                    </small> 
                    
                </div>
                <br>
            </div>    
        <% end %>
    </ul>
</div> 